@model ProductsCreateViewModel

<h2 class="text-center">Create Product</h2>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post" asp-controller="Products" asp-action="Create">
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" placeholder="Name...">
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" placeholder="Price...">
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control" placeholder="Description..." rows="4"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<h4 class="text-center">Product Type</h4>
	<hr class="hr-2 bg-dark half-width" />
	<div class="product-type-holder my-4 d-flex justify-content-around">

		@{ var types = new[] { "Food", "Domestic", "Health", "Cosmetic", "Other" };}

		@foreach (var type in types)
		{
			<div class="form-check form-check-inline">

				@if (type == "Other")
				{
					<input asp-for="Type" class="form-check-input" type="radio" value="Other" checked />
				}
				else
				{
					<input asp-for="Type" class="form-check-input" type="radio" value="@type" />
				}

				<label asp-for="Type" class="form-check-label">@type</label>
			</div>
		}

	</div>
	<hr class="hr-2 bg-dark half-width" />
	<div class="button-holder d-flex justify-content-center">
		<button type="submit" class="btn chushka-bg-color">Create</button>
	</div>
</form>