@model ProductsEditDeleteViewModel

<h2 class="text-center">Edit Product</h2>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post">
	<div class="form-group">
		<label asp-for="Name"></label>
		<input asp-for="Name" class="form-control" value="@Model.Name">
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" value="@Model.Price">
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control" rows="4">@Model.Description</textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<h4 class="text-center">Product Type</h4>
	<hr class="hr-2 bg-dark half-width" />
	<div class="product-type-holder my-4 d-flex justify-content-around">

		@{ var types = new string[] { "Food", "Domestic", "Health", "Cosmetic", "Other" };}

		@foreach (var type in types)
		{
			<div class="form-check form-check-inline">

				@if (Model.Type == type)
				{
					<input asp-for="Type" class="form-check-input" type="radio" value="@type" checked />
				}
				else
				{
					<input asp-for="Type" class="form-check-input" type="radio" value="@type" />
				}

				<label asp-for="Type" class="form-check-label">@type</label>
			</div>
		}

	</div>
	<hr class="hr-2 bg-dark half-width" />
	<div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
		<button type="submit" class="btn chushka-bg-color">Edit</button>
		<button type="submit" class="btn chushka-bg-color" asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id">Cancel</button>
	</div>
</form>