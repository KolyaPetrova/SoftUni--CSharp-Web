@{
	var user = this.User;
}

<ul class="navbar-nav">
	<li class="nav-item">
		<a class="nav-link nav-link-white" asp-controller="Home" asp-action="Index">Home</a>
	</li>
	@if (!user.Identity.IsAuthenticated)
	{
		<li class="nav-item">
			<a class="nav-link nav-link-white" asp-controller="Account" asp-action="Login">Login</a>
		</li>
		<li class="nav-item">
			<a class="nav-link nav-link-white" asp-controller="Account" asp-action="Register">Register</a>
		</li>
	}
	else if (user.Identity.IsAuthenticated && user.IsInRole("Admin"))
	{
		<li class="nav-item">
			<a class="nav-link nav-link-white" asp-controller="Products" asp-action="Create">Create Product</a>
		</li>
		<li class="nav-item">
			<a class="nav-link nav-link-white" asp-controller="Products" asp-action="All">All Orders</a>
		</li>
	}
</ul>

@if (user.Identity.IsAuthenticated)
{
	<ul class="navbar-nav left-side">
		<li class="nav-item">
			<a class="nav-link nav-link-white" asp-controller="Account" asp-action="Logout">Logout</a>
		</li>
	</ul>
}